<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.screens.FirstScreen">

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="334dp"
        android:layout_height="311dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/home_office"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc_1"
        android:layout_width="274dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sf_pro_text_bold"
        android:gravity="center"
        android:text="Plan before you spend"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_1" />

    <TextView
        android:id="@+id/next_1"
        android:layout_width="134dp"
        android:layout_height="53dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/skip_1"
        android:layout_width="102dp"
        android:layout_height="46dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_backgrnd2"
        android:gravity="center"
        android:text="Skip"
        android:textColor="#4392d2"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/next_1"
        app:layout_constraintEnd_toEndOf="@+id/next_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/status_1"
        android:layout_width="90dp"
        android:layout_height="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:src="@drawable/ic_status_1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="283dp"
        android:layout_height="74dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:text="Make lists of work and tasks you have to do. "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_1" />
</androidx.constraintlayout.widget.ConstraintLayout>
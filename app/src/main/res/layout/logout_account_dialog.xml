<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#ebf9ff"
    android:padding="18dp">

    <TextView
        android:id="@+id/no2"
        android:layout_width="114dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:background="@drawable/btn_backgrnd2"
        android:gravity="center"
        android:padding="5dp"
        android:text="No"
        android:fontFamily="sans-serif-medium"
        android:textColor="#4392d2"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/yes2"
        app:layout_constraintEnd_toStartOf="@+id/yes2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/yes2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/yes2"
        android:layout_width="119dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="44dp"
        android:layout_weight="1"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:padding="5dp"
        android:text="Yes"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/no2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/pt_sans"
        android:text="Are you sure you want to logout \nfrom your account?"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>